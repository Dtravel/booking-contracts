{
  "name": "booking-contracts",
  "version": "2.0.0",
  "description": "Smart contracts for Dtravel booking",
  "engines": {
    "node": ">=8.3.0"
  },
  "scripts": {
    "clean": "npx hardhat clean",
    "chain": "npx hardhat node",
    "compile": "npx hardhat compile",
    "deploy": "npx hardhat run --network localhost scripts/deploy.ts",
    "deploy:testnet": "npx hardhat run --network testnet scripts/deploy.ts",
    "deploy:mainnet": "npx hardhat run --network mainnet scripts/deploy.ts",
    "upgrade:testnet:factory": "npx hardhat run --network testnet scripts/upgradeFactory.ts",
    "upgrade:mainnet:factory": "npx hardhat run --network mainnet scripts/upgradeFactory.ts",
    "upgrade:testnet:property": "npx hardhat run --network testnet scripts/upgradeProperty.ts",
    "upgrade:mainnet:property": "npx hardhat run --network mainnet scripts/upgradeProperty.ts",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "prettier:sol": "npx prettier --write ./contracts -l",
    "prettier:ts": "npx prettier --write '**/**/*.{js,ts}'",
    "linter:sol": "npx solhint -f table ./contracts/**/*.sol -f table ./contracts/*.sol",
    "linter:ts": "npx eslint '**/**/*.{js,ts}'",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.0",
    "@openzeppelin/hardhat-upgrades": "^1.20.0",
    "@typechain/ethers-v5": "^7.0.1",
    "@typechain/hardhat": "^2.3.0",
    "@types/chai": "^4.2.21",
    "@types/mocha": "^9.0.0",
    "@types/node": "^12.0.0",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "chai": "^4.2.0",
    "dotenv": "^16.0.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard": "^16.0.3",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^3.4.0",
    "eslint-plugin-promise": "^5.1.0",
    "ethereum-waffle": "^3.0.0",
    "ethers": "^5.0.0",
    "hardhat": "2.9.9",
    "hardhat-gas-reporter": "^1.0.4",
    "husky": "^8.0.1",
    "prettier": "^2.3.2",
    "prettier-plugin-solidity": "^1.0.0-beta.13",
    "solhint": "^3.3.6",
    "solidity-coverage": "^0.7.16",
    "ts-node": "^10.1.0",
    "typechain": "^5.1.2",
    "typescript": "4.4.4"
  },
  "dependencies": {
    "@openzeppelin/contracts": "^4.7.3",
    "@openzeppelin/contracts-upgradeable": "^4.7.3"
  }
}
